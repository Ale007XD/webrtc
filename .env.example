# Environment Variables Template
# Copy this to .env.local for local development (DO NOT COMMIT .env.local)

# Domain and SSL
DOMAIN=localhost
EMAIL_LETSENCRYPT=admin@localhost

# JWT Authentication
JWT_SIGNING_KEY=your-jwt-secret-key-here-32-chars

# TURN Server Configuration
TURN_REALM=localhost
TURN_AUTH_SECRET=your-turn-secret-here
TURN_CRED_TTL=3600

# User Management (comma-separated)
ALLOWED_USER_IDS=user1,user2,user3,admin

# Contact List (JSON format)
CONTACT_LIST_JSON=[{"userId":"user1","publicKeys":{"identity":"...","signedPreKey":"...","signature":"..."}}]

# Service URLs
SIGNALING_PUBLIC_URL=wss://api.localhost/ws
APP_PUBLIC_URL=https://localhost

# Rate Limiting (JSON format)
RATE_LIMITS_JSON={"global":100,"auth":5,"websocket":10}

# VPS Configuration (for deployment)
VPS_HOST=your-server.com
VPS_USER=deploy-user

# Development
NODE_ENV=development
PORT=3000
