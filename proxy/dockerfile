FROM nginx:alpine

# Копируем ваш конфиг nginx — ожидается, что он уже в директории proxy/nginx.conf
COPY nginx.conf /etc/nginx/nginx.conf

# Копируем сертификаты TLS (если нужны — по умолчанию через volume/docker-compose)
# COPY fullchain.pem /etc/ssl/certs/
# COPY privkey.pem /etc/ssl/private/

EXPOSE 80
EXPOSE 443

CMD ["nginx", "-g", "daemon off;"]
